<div class="block">
  <div class="text-center">
    <%= link_to redirect_path(url.shortened), target: :_blank, class: 'inline-block text-blue-500 hover:text-blue-600 transition duration-75 ease-in-out text-2xl font-bold' do %>
      <p><%= request_shortened_url(url.shortened) %></p>
      <p class="text-sm text-gray-500 font-normal">
        <%= url.original %>
      </p> 
    <% end %>
  </div>
</div>

<div class="block mt-10">
  <div class="grid grid-cols-2 gap-4">
    <div class="col bg-white rounded-lg p-6 text-center">
      <p class="text-gray-900 text-base leading-normal">
        Total clicks
      </p>
      <p class="text-gray-900 text-5xl font-bold mt-4">
        <%= url.clicks_count %>
      </p>
    </div>
    <div class="col bg-white rounded-lg p-6 text-center">
      <p class="text-gray-900 text-base leading-normal">
        Unique clicks
      </p>
      <p class="text-gray-900 text-5xl font-bold mt-4">
        <%= url.clicks_count_unique %>
      </p>
    </div>
  </div>
</div>